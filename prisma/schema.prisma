generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Email {
  id        String       @id @default(cuid())
  address   String
  mailbox   String
  domain    String?
  mailCuid  String
  from      String?
  subject   String?
  date      DateTime
  read      Boolean   @default(false)
  text      String?

  @@map("tbl_emails")
}

model Setting {
  name           String          @id @unique
  value          String
  isReadOnly     Boolean         @default(false)
  isPrivate      Boolean         @default(true)

  @@map("tbl_settings")
} 
